{
    "manifest_version": 3,
    "name": "autodoc",
    "description": "auto documentation builder from code snippet",
    "version": "1.0",
    "icons":{
        "128":"assests/ai.png"
    },
    "action":{

      "popup": "popup.html"
    },
    "permissions":[
      
      "contextMenus",
      "tabs"
    ],
    "host_permissions": ["*://*/*"],

    "content_scripts": [
        {
          "js": ["app/src/content.js"], 
          "css":["app/src/content.css"],
          "matches": [
            "<all_urls>"
          ]
        }
      ],
    "background": {
      "service_worker": "background.js"
      }  
  }